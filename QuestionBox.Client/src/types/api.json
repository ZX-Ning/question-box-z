{
  "openapi": "3.1.1",
  "info": {
    "title": "QuestionBox.Server | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:50001/"
    }
  ],
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/auth/status": {
      "get": {
        "tags": [
          "Auth"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/StatusDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/questions": {
      "get": {
        "tags": [
          "Questions"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuestionDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuestionDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuestionDto"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Questions"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QuestionWrapper"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/QuestionWrapper"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/QuestionWrapper"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/questions/admin": {
      "get": {
        "tags": [
          "Questions"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuestionModel"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuestionModel"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuestionModel"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginRequest": {
        "required": [
          "name",
          "password"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "QuestionDto": {
        "type": "object",
        "properties": {
          "index": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "question": {
            "type": "string"
          },
          "answer": {
            "type": "string"
          },
          "questionTime": {
            "type": "string"
          },
          "answerTime": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "QuestionModel": {
        "required": [
          "question",
          "questionTime"
        ],
        "type": "object",
        "properties": {
          "id": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "question": {
            "type": "string"
          },
          "questionTime": {
            "type": "string"
          },
          "answer": {
            "type": [
              "null",
              "string"
            ]
          },
          "answerTime": {
            "type": [
              "null",
              "string"
            ]
          },
          "ipAddr": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "QuestionWrapper": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string"
          }
        }
      },
      "StatusDto": {
        "required": [
          "isLoggin"
        ],
        "type": "object",
        "properties": {
          "isLoggin": {
            "type": "boolean"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Auth"
    },
    {
      "name": "Questions"
    }
  ]
}