// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
    "name": "QuestionBox Dev Container",
    "image": "ghcr.io/zx-ning/web-dev-env:main",
    "runArgs": [
        "--network=host"
    ],
    "containerEnv": {
        "SHELL": "/usr/bin/fish"
    },
    "remoteEnv": {
        "GIT_EDITOR": "code --wait"
    },
    // Features to add to the dev container. More info: https://containers.dev/features.
    "features": {},
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [],
    // Uncomment the next line to run commands after the container is created.
    "postCreateCommand": {
        "npm-install": "cd /workspaces/question-box-z/QuestionBox.Client && pnpm install",
        "dotnet-restore": "cd /workspaces/question-box-z/QuestionBox.Server && dotnet restore"
    },
    // Configure tool-specific properties.
    // "customizations": {},
    // Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
    "remoteUser": "root",
    "updateRemoteUserUID": true,
    "otherPortsAttributes": {
        "onAutoForward": "ignore"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "Vue.volar",
                "bradlc.vscode-tailwindcss",
                "cpylua.language-postcss",
                "esbenp.prettier-vscode",
                "jock.svg",
                "EditorConfig.EditorConfig",
                "yy0931.vscode-sqlite3-editor",
                "ms-python.python",
                "Gxl.git-graph-3"
            ]
        }
    }
}